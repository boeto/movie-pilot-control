{
  "files.autoSave": "onFocusChange",
  "editor.formatOnSave": true,

  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },

  "debug.javascript.unmapMissingSources": true,

  "tailwindCSS.experimental.classRegex": [
    [
      "(?:twMerge|twSort|twJoin)\\(([^\\);]*)[\\);]",
      "[`'\"`]([^'\"`,;]*)[`'\"`]"
    ]
  ]
}
