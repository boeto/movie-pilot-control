{
  "name": "movie-pilot-control",
  "version": "0.1.0",
  "private": true,
  "description": "This is a front-end project for MoviePilot",
  "scripts": {
    "dev": "next dev -p 3002",
    "build": "next build",
    "start": "next start -p 3002",
    "lint": "next lint --max-warnings=0",
    "lint:fix": "next lint --fix",
    "prettier": "prettier --ignore-unknown --write src",
    "prepare": "if [ \"$NODE_ENV\" != \"production\" ]; then husky install; fi",
    "prepare:pnpm": "corepack enable && corepack prepare pnpm@latest --activate",
    "ci": "pnpm install --frozen-lockfile",
    "ci:prod": "pnpm install --frozen-lockfile --prod",
    "pm2:dev": "pm2 update && pm2 start ecosystem.config.js --env development",
    "pm2:prod": "pm2 start ecosystem.config.js --env production",
    "commit": "czg --no-ai",
    "ca": "czg ai -N=10"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.9.5",
    "flowbite": "^1.7.0",
    "flowbite-react": "^0.4.10",
    "next": "^13.4.9",
    "next-intl": "^2.17.4",
    "next-runtime-env": "^1.6.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.10.1",
    "react-redux": "^8.1.1",
    "redux-persist": "^6.0.0",
    "sharp": "^0.32.1",
    "tailwind-merge": "^1.13.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.6",
    "@commitlint/config-conventional": "^17.6.6",
    "@types/node": "~20.3.3",
    "@types/react": "~18.2.14",
    "@types/react-dom": "~18.2.6",
    "@types/redux-logger": "~3.0.9",
    "autoprefixer": "~10.4.14",
    "commitizen": "^4.3.0",
    "cz-git": "^1.6.1",
    "czg": "^1.6.1",
    "eslint": "^8.44.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-next": "^13.4.9",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "only-allow": "^1.1.1",
    "pm2": "^5.3.0",
    "postcss": "^8.4.25",
    "prettier": "^2.8.8",
    "prettier-plugin-tailwindcss": "^0.3.0",
    "redux-logger": "^3.0.6",
    "tailwindcss": "^3.3.2",
    "typescript": "^5.1.6"
  },
  "engines": {
    "node": ">=16.8.0"
  }
}
